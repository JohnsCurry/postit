<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>

  <li><div class='nav_item'>
    <%= link_to 'New Post', new_post_path, class: 'btn btn-success btn-small' %>
    </div>
  </li>

   <% if logged_in? %>
    <div class='nav_item'>
      <li>Hi <%= current_user.username %></li>
      <li><%= link_to 'Log Out', logout_path, class: 'btn btn-small' %></li>
    </div>
    <% else %>
    <div class='nav_item'>
      <li><%= link_to 'Log In', login_path, class: 'btn btn-small' %></li>
    </div>
    <div class='nav_item'>
    <li><%= link_to 'Register', register_path, class: 'btn btn-success btn-small' %></li>
    </div>
    <% end %>
  <li><div class='btn-group nav_item'>
    <%= link_to '#', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown' do %>
    Categories <span class='caret'></span>
    <% end %>
    <ul class='dropdown-menu'>
      <% Category.all.each do |category| %>
      <li>
        <%= link_to category.name, category_path(category) %>
      </li>
      <% end %>
      <li class='divider'></li>
      <li>
        <%= link_to(new_category_path) do %>
        <i class='icon-plus'></i>
        New Category
        <% end %>
      </li>
    </ul>
  </div></li>
</ul>
